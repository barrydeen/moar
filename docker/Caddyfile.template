{
    on_demand_tls {
        ask http://server:8080/.well-known/caddy-ask
    }
}

:443 {
    tls {
        on_demand
    }
    reverse_proxy server:8080
}

:8888 {
    tls {
        on_demand
    }
    handle /api/* {
        reverse_proxy server:8080
    }
    handle {
        reverse_proxy admin:3000
    }
}

:80 {
    redir https://{host}{uri} permanent
}
